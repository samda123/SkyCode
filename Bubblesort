#include<bits/stdc++.h>

using namespace std;
int main()
{
    int n;
    cin>>n;
   int arr[n];
   for(int i=0;i<n;i++)
   {
       cin>>arr[i];
   }
   int temp,swaps=0;
   for(int i=0;i<n-1;i++)
   { 
       for(int j=i+1;j<n;j++)
       {
           if(arr[i]>arr[j])
           {
               temp=arr[j];
               arr[j]=arr[i];
               arr[i]=temp;
               swaps++;
           }
       }
   }
   cout<<"Array is sorted in "<<swaps<<"swaps"<<endl;
   cout<<"First element is "<<arr[0]<<endl;
   cout<<"Last element is "<<arr[n-1]<<endl;
}
